// Prisma schema shit for Makro Oppdatering

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Nyhetsartikler fra RSS/scraping
model NewsItem {
  id          String   @id @default(cuid())
  hash        String   @unique // Deduplisering: hash(title+source+publishedAt)
  title       String
  summary     String?
  url         String
  source      String   // RSS kilde navn
  sourceUrl   String?  // Original kilde URL
  publishedAt DateTime
  fetchedAt   DateTime @default(now())
  
  // Enrichment fields
  language    String   @default("en")
  assetType   AssetType @default(OTHER)
  
  // Relasjoner
  tags        Tag[]
  tickers     Ticker[]
  countries   Country[]
  sectors     Sector[]
  
  // Metadata
  sentiment   Float?   // -1 til 1
  relevance   Float    @default(0.5) // 0 til 1
  isDuplicate Boolean  @default(false)
  
  // For quiz generering
  quizQuestions QuizQuestion[]
  
  @@index([publishedAt])
  @@index([assetType])
  @@index([source])
  @@index([hash])
  @@index([isDuplicate])
  @@index([sentiment, publishedAt])
  @@index([publishedAt, assetType])
  @@index([source, publishedAt])
  @@index([assetType, publishedAt])
}

// Tags for kategorisering
model Tag {
  id        String     @id @default(cuid())
  name      String     @unique
  newsItems NewsItem[]
}

// Tickers (aksjesymboler)
model Ticker {
  id          String     @id @default(cuid())
  symbol      String     @unique
  name        String?
  assetType   AssetType
  exchange    String?
  country     String?
  sectorId    String?
  sector      Sector?    @relation(fields: [sectorId], references: [id])
  newsItems   NewsItem[]
  
  // Markedsdata (valgfritt)
  marketData  MarketData?
  
  @@index([symbol])
}

// Land/nasjonalitet
model Country {
  id        String     @id @default(cuid())
  code      String     @unique // ISO 3166-1 alpha-2
  name      String
  newsItems NewsItem[]
}

// Sektors (GICS-lignende)
model Sector {
  id          String     @id @default(cuid())
  name        String     @unique
  description String?
  tickers     Ticker[]
  newsItems   NewsItem[]
}

// Markedsdata (priser, PE-ratio, etc)
model MarketData {
  id        String   @id @default(cuid())
  tickerId  String   @unique
  ticker    Ticker   @relation(fields: [tickerId], references: [id], onDelete: Cascade)
  
  // Priser
  price     Float?
  priceChange Float?
  priceChangePercent Float?
  
  // Fundamentals
  peRatio   Float?
  marketCap Float?
  
  // Metadata
  updatedAt DateTime @updatedAt
  
  @@index([peRatio])
}

// Quiz system
model QuizSet {
  id          String       @id @default(cuid())
  title       String
  description String?
  type        QuizType
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  // Filters used to generate
  dateFrom    DateTime
  dateTo      DateTime
  assetTypes  AssetType[]
  
  questions   QuizQuestion[]
  scores      QuizScore[]
}

model QuizQuestion {
  id       String   @id @default(cuid())
  quizSetId String
  quizSet  QuizSet  @relation(fields: [quizSetId], references: [id], onDelete: Cascade)
  
  question String
  options  String[] // JSON array
  correct  Int      // Index i options array
  
  // Relasjon til nyhet
  newsItemId String?
  newsItem   NewsItem? @relation(fields: [newsItemId], references: [id])
  
  // For "match par" og "finn sammenhengen"
  imageUrl   String?
  pairId     String?  // For matching quizer
  
  order      Int
}

model QuizScore {
  id        String   @id @default(cuid())
  quizSetId String
  quizSet   QuizSet  @relation(fields: [quizSetId], references: [id], onDelete: Cascade)
  
  // Anonym eller auth
  sessionId String
  userName  String?
  
  score     Int
  maxScore  Int
  timeMs    Int      // Tid brukt i millisekunder
  
  createdAt DateTime @default(now())
}

// RSS Sources konfigurasjon
model RssSource {
  id          String   @id @default(cuid())
  name        String
  url         String   @unique
  assetType   AssetType @default(OTHER)
  isActive    Boolean  @default(true)
  lastFetched DateTime?
  fetchCount  Int      @default(0)
}

// Preprocessed data cache for fast loading
model PreprocessedCache {
  id          String   @id @default(cuid())
  filterHash  String   @unique
  data        String   // JSON stringified data
  generatedAt DateTime @default(now())
  expiresAt   DateTime
  
  @@index([filterHash])
  @@index([expiresAt])
}

enum AssetType {
  // Equities
  EQUITY      // Single stocks, shares
  ETF         // Exchange Traded Funds
  FUND        // Mutual funds, index funds, hedge funds
  ADR         // American Depositary Receipts
  
  // Fixed Income
  BOND        // Government and corporate bonds
  
  // Crypto & Digital Assets
  CRYPTO      // Bitcoin, Ethereum, etc.
  
  // Commodities (as tradable assets)
  COMMODITY   // Oil, gold, wheat futures, etc.
  
  // FX
  FOREX       // Currency pairs, FX markets
  
  // Indices
  INDEX       // S&P 500, OBX, etc.
  
  // Other tradable instruments
  DERIVATIVE  // Options, futures, swaps
  
  // Non-specific / Uncategorized
  OTHER
  
  // Legacy values (deprecated but kept for DB compatibility)
  MACRO       // Macroeconomics
  POLITICS    // Political news
  GEOPOLITICS // Geopolitical news
}

// News topic/categories (separate from asset types)
enum NewsTopic {
  // Macroeconomics
  MACRO       // GDP, general economy
  INFLATION   // CPI, prices
  EMPLOYMENT  // Jobs, unemployment
  RATES       // Interest rates, central banks
  
  // Geopolitics & Policy
  GEOPOLITICS // Wars, conflicts, diplomacy
  POLITICS    // Elections, government
  REGULATION  // SEC, laws, compliance
  TRADE       // Trade deals, tariffs
  
  // Market Events
  EARNINGS    // Company earnings reports
  IPO         // Initial public offerings
  MNA         // Mergers & acquisitions
  
  // Sectors/Themes
  TECH        // Technology sector
  HEALTHCARE  // Pharma, biotech
  ENERGY      // Oil, gas, renewables
  FINANCE_SECTOR // Banking sector news
}

enum QuizType {
  MULTIPLE_CHOICE
  MATCH_PAIRS
  FIND_CONNECTION
}
